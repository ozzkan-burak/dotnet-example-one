@model Candidates

<div class="display-6">Apply</div>

<form method="post" action="/course/apply" >
  <div class="form-group my-2">
    <label>Email</label>
    <input name="Email" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label>İsim</label>
    <input name="FirstName" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label>Soyisim</label>
    <input name="LastName" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label>Yaş</label>
    <select name="age" class="form-control">
      <option value="18">18</option>
      <option value="19">19</option>
      <option value="20">20</option>
      <option value="21">21</option>
      <option value="22">22</option>
      <option value="23">23</option>
      <option value="24">24</option>
    </select>
  </div>

  <fieldset>
    <legend>Bir Kurs Seçiniz</legend>
    <p>
      <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core MVC" />
      <label>ASP.NET Core MVC</label>
    </p>
    <p>
      <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core API" />
      <label>ASP.NET Core API</label>
    </p>
    <p>
      <input id="mvc" type="radio" name="SelectedCourse" value="Blazor" />
      <label>Blazor</label>
    </p>
  </fieldset>
  <button class="btn btn-primary" type="submit">Başvur</button>
  <a href="/" class="btn btn-warning">Ana Sayfa</a>
</form>