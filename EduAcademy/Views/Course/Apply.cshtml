@model Candidates

<div class="display-6">Apply</div>

<form method="post" asp-action="Apply" >
  <div class="text-danger" asp-validation-summary="All"></div>
  <div class="form-group my-2">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label asp-for="FirstName">İsim</label>
    <input asp-for="FirstName" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label asp-for="LastName">Soyisim</label>
    <input asp-for="LastName" class="form-control" />
  </div>

  <div class="form-group my-2">
    <label asp-for="Age">Yaş</label>
    <select aps-for="age" class="form-control">
      <option value="18">18</option>
      <option value="19">19</option>
      <option value="20">20</option>
      <option value="21">21</option>
      <option value="22">22</option>
      <option value="23">23</option>
      <option value="24">24</option>
    </select>
  </div>

  <fieldset>
    <legend>Bir Kurs Seçiniz</legend>
    <p>
      <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked />
      <label>ASP.NET Core MVC</label>
    </p>
    <p>
      <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
      <label>ASP.NET Core API</label>
    </p>
    <p>
      <input id="mvc" type="radio" asp-for="SelectedCourse" value="Blazor" />
      <label>Blazor</label>
    </p>
  </fieldset>
  <button class="btn btn-primary" type="submit">Başvur</button>
  <a asp-controlller="Home" asp-action="Index" class="btn btn-warning">Ana Sayfa</a>
</form>