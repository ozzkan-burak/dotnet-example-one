@model Candidates

<div>
  <h3 class="display-4">Tebrikler @Model.FullName</h3>
  <p class="lead">Başvurunuz <mark> ulaşmıştır</mark></p>
  <p class="lead">İlginiz için teşekkür ederiz.</p>
  <blockquote class="blockquote">
    @Model.SelectedCourse kursuna, @Model.ApplyAt tarihinde başvuru yaptınız.
  </blockquote>

  <div class="btn-group">
    <a class="btn btn-outline-success" asp-action="Index">Başvurular</a>
    <a class="btn btn-success" asp-action="Index" asp-controller="Home">Anasayfa</a>
  </div>
</div>